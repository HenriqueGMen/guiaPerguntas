<%- include('partials/header.ejs') %>

<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container">
    <h1>Perguntas</h1>
    <br>
    <a href="/perguntas" class="btn btn-warning">Perguntar</a>
    <hr>

    <% perguntas.forEach(pergunta => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <h3><%= pergunta.titulo %></h3>
        </div>
        <div class="card-footer">
          <a href="/perguntas/<%= pergunta.id%>" class="btn btn-warning">Responder</a>
        </div>  
      </div>
    <% }) %>
  </div>

</body>

<%- include('partials/footer.ejs') %>